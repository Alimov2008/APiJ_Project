<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.apij_project.controllers.TicTacToeController">

    <top>
        <Label fx:id="scoreLbl"
               text="Score: 0"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 20; -fx-padding: 10;" />
    </top>

    <center>
        <GridPane fx:id="board"
                  alignment="CENTER"
                  hgap="5" vgap="5"
                  style="-fx-padding: 20;">

            <children>
                <Button fx:id="btn00" onAction="#playerMove" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <Button fx:id="btn01" onAction="#playerMove" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Button fx:id="btn02" onAction="#playerMove" GridPane.rowIndex="0" GridPane.columnIndex="2" />

                <Button fx:id="btn10" onAction="#playerMove" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <Button fx:id="btn11" onAction="#playerMove" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Button fx:id="btn12" onAction="#playerMove" GridPane.rowIndex="1" GridPane.columnIndex="2" />

                <Button fx:id="btn20" onAction="#playerMove" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <Button fx:id="btn21" onAction="#playerMove" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <Button fx:id="btn22" onAction="#playerMove" GridPane.rowIndex="2" GridPane.columnIndex="2" />
            </children>
        </GridPane>
    </center>

    <bottom>
        <VBox alignment="CENTER">
            <Label fx:id="statusLbl" style="-fx-font-size: 18; -fx-padding: 10;" />
            <Button fx:id="nextButton"
                    text="Next"
                    visible="false"
                    onAction="#goNext"
                    style="-fx-font-size: 18; -fx-padding: 10;" />
        </VBox>
    </bottom>

</BorderPane>